#!/bin/sh

## sudo dpkg --install qx11grab_*.deb

VERSION=${1:-"@QX11GRAB_VERSION_MAJOR@.@QX11GRAB_VERSION_MINOR@.@QX11GRAB_VERSION_RELEASE@"}
SIGN_KEY=${2:-""}

test -f /usr/share/cdbs/1/class/cmake.mk || {
  echo "cdbs (>= 0.4.8) not Installed."
  exit 1
}

if test -n "$SIGN_KEY" ; then
  dpkg-buildpackage -rfakeroot -k$SIGN_KEY -v${VERSION} -F -tc -Rdebian/rules
else
  dpkg-buildpackage -rfakeroot -v${VERSION} -F -tc -Rdebian/rules
fi
